<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.JoinActivity">


    <EditText
        android:id="@+id/JoinActivity_NID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Network id" />

    <EditText
        android:id="@+id/JoinActivity_pName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_above="@+id/JoinActivity_NID"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="Player Name" />

    <Button
        android:id="@+id/JoinActivity_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/JoinActivity_NID"
        android:text="join" />
</RelativeLayout>